<!DOCTYPE html>
<html lang="en">
<%- include('layouts/header'); -%>

<body>
  <%- include('layouts/loader'); -%>

  <%- include('layouts/navbar'); -%>


  <!-- Page Header -->
  <section id="ayo">
        <div id="work" class="carousel slide carousel-fade" data-ride="carousel">
            <ol class="carousel-indicators">
              <li data-target="#work" data-slide-to="0" class="active"></li>
              <li data-target="#work" data-slide-to="1"></li>
              <li data-target="#work" data-slide-to="2"></li>
              <li data-target="#work" data-slide-to="3"></li>
              <li data-target="#work" data-slide-to="4"></li>
              <li data-target="#work" data-slide-to="5"></li>
            </ol>
            <div class="carousel-inner">
    
              <div class="carousel-item active" >
                <img src="img1.jpg" class="d-block w-100" alt="..."id="image">
              </div>
    
              <div class="carousel-item" >
                <img src="img2.jpg" class="d-block w-100" alt="..." id="image">
              </div>
    
              <div class="carousel-item" >
                <img src="img3.jpg" class="d-block w-100" alt="..."id="image">
              </div>
    
              <div class="carousel-item" >
                <img src="img4.jpg" class="d-block w-100" alt="..." id="image">
              </div>
    
              <div class="carousel-item" >
                <img src="img5.jpg" class="d-block w-100" alt="..." id="image">
              </div>
    
              <div class="carousel-item" >
                <img src="img6.jpg" class="d-block w-100" alt="..."id="image">
              </div>
    
            </div>
          </div>
    </section>
  
  <!-- Main Content -->
  <div class="container">

    <div class="row">

      <!-- Blog Entries Column -->
      <div class="col-md-8">

        <h1 class="my-4">RECENT
          <small>POSTS</small>
          :
        </h1>

        <!-- Blog Post -->
        <% for (var i = 0; i < blogposts.length; i++) { %>
        <div class="card mb-4">
          <%  if (blogposts[i].image) { %>
          <img class="card-img-top" src="<%= blogposts[i].image %>" alt="">
          <% } else { %>
          <img class="card-img-top" src="/img/Default.jpg" alt="Card image cap">
          <% } %>
          <div class="card-body">
            <a style="text-decoration: none;color: midnightblue;position:relative; max-height: 450px;overflow: hidden;display: list-item;text-overflow: ellipsis; "
              href="/post/<%= blogposts[i]._id %>">
              <h2 class="card-title"> <% if (searchOptions.title !== null || searchOptions.title == "" )  { %>
                <%= blogposts[i].title %>
                <% } %>
              </h2>
              <p class="card-text"><%- blogposts[i].body %></p>
            </a>

            <a href="/post/<%= blogposts[i]._id %>" class="btn btn-primary">Read More &rarr;</a>

          </div>
          <div class="card-footer text-muted">
            Posted by
            <a href="/user/<%= blogposts[i].userid._id %>"><%= blogposts[i].userid.username %></a>
            on <%= blogposts[i].datePosted.toDateString() %>
          </div>
        </div>
        <% } %>
        <!-- Blog Post -->


        <!-- Blog Post -->


        <!-- Pagination -->
        <ul class="pagination justify-content-center mb-4">
          <li class="page-item">
            <a class="page-link" href="/home">&larr; Older</a>
          </li>
          <li class="page-item disabled">
            <a class="page-link" href="/home">Newer &rarr;</a>
          </li>
        </ul>

      </div>


      <!-- Sidebar Widgets Column -->
      <div class="col-md-4">

        <!-- Search Widget -->
        <div class="card my-4">
          <h5 class="card-header">Search</h5>
          <div class="card-body">
            <div class="input-group">
              <form class="form-inline my-2 my-lg-0" action="/home" method="GET">
                <input class="form-control mr-sm-2" type="search" placeholder="Search by PostTitle" aria-label="Search"
                  name="title">



                <span class="input-group-append">
                  <button class="btn btn-outline-primary my-2 my-sm-0" type="submit"><i
                      class="fas fa-search"></i></button>
                </span>
              </form>
            </div>
          </div>
        </div>

        <!-- /.container -->

        <!-- Footer -->

        <!-- Bootstrap core JavaScript -->

        <%- include('layouts/footer'); -%>
        <%- include('layouts/scripts'); -%>
</body>

</html>
