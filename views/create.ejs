<!DOCTYPE html>
<html lang="en">
<%- include('layouts/header'); -%>

<body>
    <%- include('layouts/loader'); -%>
    <%- include('layouts/navbar'); -%>
    <!-- Page Header -->
    <header class="masthead" style="background-image: url('/img/contact-bg.jpg')">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="page-heading">
                        <h1>Create a New Post.</h1>
                        <span class="subheading">Post creation page.</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">

                <form action="/posts/store" method="POST" enctype="multipart/form-data">
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label>Title</label>
                            <input type="text" class="form-control" placeholder="Title" id="title" name=title>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label>Description</label>
                            <textarea id="body" rows="5" class="form-control" id="body" name=body></textarea>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label>Image</label>
                            <input type="file" class="form-control" id="image" name=image>
                        </div>
                    </div>
                    <br>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary" id="sendMessageButton">Done</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <hr>
    <script>
        $('#body').summernote({
            placeholder: 'Hello BloggerVillians',
            tabsize: 2, height: 200
        });
    </script>

    <%- include('layouts/scripts'); -%>
</body>

</html>